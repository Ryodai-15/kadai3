<% if flash[:enotice] %>
  <p id = "notice" ><%= flash[:notice] %></p>
<% end %>

<div class = "container">
  <div class = "row">
    <div class = "col-md-3">
      <h2>User info</h2>
      <%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>
      <table class="table">
        <thead>
          <tr>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th>name:</th>
            <th><%= @book.user.name %></th>
          </tr>
          <tr>
            <th>introduction:</th>
            <th><%= @book.user.introduction %></th>
          </tr>
        </tbody>
      </table>

      <div class = "row">
        <%= link_to " ", edit_user_path(@book.user), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
      </div>

      <div class = "row">
          <%= render 'books/form', book: @new %>
      </div>

    </div>

    <div class = "col-md-8 offset-md-1">
      <h2>Book detail</h2>
        <table class = "table table-striped">
          <thead>
            <tr>
              <th colspan="4"></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@book.user.id) do %>
                  <%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %><br>
                  <%= @book.user.name %>
                <% end %>
              </td>
              <td><%= link_to @book.title,book_path(@book) %></td>
              <td><%= @book.body %></td>
              <% if @book.user == current_user %>
                <td><%= link_to "Edit" ,edit_book_path(@book.id), class: "btn btn-sm btn-success" %></td>
                <td><%= link_to "Destroy", book_path(@book.id) ,method: :delete, data: { confirm: "Are you sure?" } ,class: "btn btn-sm btn-danger" %></td>
              <% end %>

              <% if @book.favorited_by?(current_user) %>
                <p>
                  <td>
                    <%= link_to book_favorites_path(@book), method: :delete do %>
                      ♡<%= @book.favorites.count %>
                    <% end %>
                  </td>
                </p>
                <% else %>
                <p>
                  <td>
                    <%= link_to book_favorites_path(@book), method: :post do %>
                      ♡<%= @book.favorites.count %>
                    <% end %>
                  </td>
                </p>
              <% end %>
          </tr>
        </tbody>
      </table>
    </div>
</div>